{
  "name": "boiler-plate-html-bootstrap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "sass --style=compressed --quiet-deps src/scss/main.scss:build/main.css",
    "css:autoprefixer": "postcss -u autoprefixer -r build/*.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:images": "imagemin src/images/**/* --out-dir=build/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:fonts": "cpx --include-empty-dirs \"src/fonts/**/*\" \"build/fonts/\" ",
    "watch:fonts": "onchange \"src/fonts/**/*\" -- npm run build:fonts",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "serve": "browser-sync start --server \"build\" --files \"build\"",
    "watch": "cross-env SASS_PATH=./node_modules/ run-p serve watch:*",
    "build": "cross-env SASS_PATH=./node_modules/ run-p build:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "htmlnano": "^1.0.0",
    "imagemin-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.16.4",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.7.4",
    "sass": "^1.35.1",
    "stylelint": "^13.13.1",
    "vue-loader": "^15.9.7",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "core-js": "^3.15.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1",
    "vue": "^2.6.14"
  }
}
